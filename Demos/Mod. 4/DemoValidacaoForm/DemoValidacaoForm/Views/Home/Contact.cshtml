@{
    ViewBag.Title = "Contact";
}
<h2>@ViewBag.Title.</h2>
<h3>@ViewBag.Message</h3>

<form class="form-horizontal" method="post" role="form">
    <div class="form-group">
        <div class="col-sm-10">
            <input type="text" class="form-control" id="inputNome" required="required"
                    name="nome" placeholder="Digite o seu nome completo">
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-10">
            <input type="text" class="form-control"
                   pattern="\d{3}\.\d{3}\.\d{3}-\d{2}"
                   title="Digite o CPF no formato nnn.nnn.nnn-nn"
                   id="inputSite" name="cpf" placeholder="CPF"
                   oninvalid="return cpf_incorreto(this)"
                    />
        </div>
    </div>


    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default">Enviar</button>
        </div>
    </div>
</form>
<script>
   function cpf_incorreto(el) {
      alert("O valor " + el.value + " não é um CPF");
      return false;
   }
</script>
